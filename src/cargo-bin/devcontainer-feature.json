{
  "name": "Cargo Install",
  "id": "cargo-bin",
  "version": "1.0.0",
  "description": "Installs binary crates",
  "options": {
    "crates": {
      "type": "string",
      "default": "",
      "description": "space separated list of crates to install"
    },
    "use-binstall": {
      "type": "boolean",
      "default": true,
      "description": "use cargo binstall instead of cargo install"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/rust"
  ]
}